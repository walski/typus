<table>

  <thead>
    <tr>
      <% headers.each do |header| %>
        <th><%= header %></th>
      <% end %>
      <th></th>
    </tr>
  </thead>

  <% items.each do |item| %>
    <tr class="<%= cycle('even', 'odd') %>" id="<%= dom_id(item) %>">
      <% table_fields_for_item(item, fields, link_options).each do |field| %>
        <td><%= field %></td>
      <% end %>
      <td class="last" align="right">
        <%= table_actions(model, item) %>
      </td>
    </tr>
  <% end %>

