<%
  custom = {:rows => @resource.typus_options_for(:form_rows)}
  
  # Read only fields.
  if @resource.typus_field_options_for(:read_only).to_s.split(/[,\s+]/).include?(attribute)
    custom.merge!(:readonly => 'readonly')
    label_text << " <small>#{_t("Read only")}</small>"
  end
  
  options = options.merge!(custom)
%>

<li id="<%= attribute %>">
  <%= form.label attribute, raw(label_text) %>
  <%= form.text_area attribute, options %>
</li>
